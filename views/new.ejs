<% layout('layouts/boilerplate') %>
    <main>
        <form method="POST" action="/campgrounds" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <h1>Add Campground</h1>
                    <div class="mb-3">
                        <div>
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" name="campground[title]" id="title" placeholder="Campground title" required />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="campground[location]" class="form-control" placeholder="Location" id="location" required />
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="campground[description]" id="description" rows="3" placeholder="Description" required></textarea>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <!-- <input type="file" name="image" id="image" multiple /> -->

                    <!-- <div class="mb-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input type="text" name="campground[image]" class="form-control" placeholder="image URL" id="image" required />
                        <div class="valid-feedback">Looks good!</div>
                    </div> -->
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="addon-wrapping">$</span>
                        <input type="text" class="form-control" name="campground[price]" placeholder="0.00" aria-label="Price" aria-describedby="addon-wrapping" required />
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <div class="custom-file mb-3">
                        <label for="image" class="form-label custom-file-label">Upload Images</label
          >
          <input
            class="form-control"
            type="file"
            id="image"
            name="image"
            multiple
          />
        </div>

        <div class="mb-3">
          <div>
            <button class="btn btn-primary">Add Campground</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</main>