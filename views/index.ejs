<% layout('layouts/boilerplate') %>

    <main>
        <div id="map" class="map mb-5"></div>

        <div class="mb-3">
            <h1>All Campgrounds</h1>
        </div>

        <% for(let c of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=c.images[0].url %> " class="card-img-top img-fluid" alt="..." />
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            <%= c.title %>
                        </h5>
                        <p class="card-text">
                            <%= c.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted"><%= c.location %></small>
                        </p>
                        <p class="card-text">
                            <%= c.price %>
                        </p>
                        <p>

                        </p><a href="/campgrounds/<%=c._id%> " class="btn btn-primary">View <%=c.title %></a></p>
                    </div>
                </div>
            </div>
            <% } %>
    </main>

    <script>
        mapToken = "<%-process.env.MAPBOX_TOKEN%>";
        const allCampgrounds = {
            features: <%-JSON.stringify(campgrounds)%>
        };
        console.log(allCampgrounds)
    </script>

    <script src="/javascripts/clusterMap.js"></script>